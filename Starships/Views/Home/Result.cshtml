@model Starships.Models.GridResultDTO

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <fieldset>
            <legend>
                <i class="fa fa-search"></i> Starships - ASP.NET (Result)
            </legend>
        </fieldset>

        <div class="form-group">
            <div class="col-sm-offset-0 col-sm-12">
                <input type="button" class="btn btn-info" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
            </div>
        </div>

        <div class="table-responsive">
            <table id="resultGrid" class="table table-striped table-bordered table-hover table-responsive dataTable" cellspacing="0" style="overflow scroll;">
                <thead class="sorted_head">
                    <tr>
                        <th>
                            Name of this Starship
                        </th>
                        <th>
                            Stops
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.resultDTO)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.value)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-0 col-sm-12">
                <input type="button" class="btn btn-info" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}